<%= form_with(model: menu_inventory) do |form| %>
<% if menu_inventory.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(menu_inventory.errors.count, "error") %> prohibited this menu_inventory from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% menu_inventory.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :quantity_required, class: label_class %>
          <%= form.number_field :quantity_required, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :menu_id, class: label_class %>
          <%= form.text_field :menu_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :inventory_id, class: label_class %>
          <%= form.text_field :inventory_id, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if menu_inventory.persisted? %>
<%= link_to "Cancel", menu_inventory, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", menu_inventories_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
