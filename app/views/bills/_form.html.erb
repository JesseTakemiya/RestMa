<%= form_with(model: bill) do |form| %>
<% if bill.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% bill.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :total_amount, class: label_class %>
          <%= form.text_field :total_amount, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.text_field :status, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :order_id, class: label_class %>
          <%= form.text_field :order_id, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if bill.persisted? %>
<%= link_to "Cancel", bill, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", bills_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
