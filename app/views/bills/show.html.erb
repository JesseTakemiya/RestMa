<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Bill</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to bills_path, class: button_class(theme: "transparent") do %>
      All Bills
      <% end %>
      <%= link_to edit_bill_path(@bill), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Total amount:</p>
        <p><%= @bill.total_amount %></p>
      </li>
      <li>
        <p class="font-semibold">Status:</p>
        <p><%= @bill.status %></p>
      </li>
      <li>
        <p class="font-semibold">Order:</p>
        <p><%= @bill.order %></p>
      </li>
  </ul>
</div>
