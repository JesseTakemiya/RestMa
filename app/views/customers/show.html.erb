<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Customer</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to customers_path, class: button_class(theme: "transparent") do %>
      All Customers
      <% end %>
      <%= link_to edit_customer_path(@customer), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @customer.name %></p>
      </li>
      <li>
        <p class="font-semibold">Phone:</p>
        <p><%= @customer.phone %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @customer.email %></p>
      </li>
      <li>
        <p class="font-semibold">Time in:</p>
        <p><%= @customer.time_in %></p>
      </li>
      <li>
        <p class="font-semibold">Time out:</p>
        <p><%= @customer.time_out %></p>
      </li>
      <li>
        <p class="font-semibold">Loyalty points:</p>
        <p><%= @customer.loyalty_points %></p>
      </li>
      <li>
        <p class="font-semibold">Membership status:</p>
        <p><%= @customer.membership_status %></p>
      </li>
  </ul>
</div>
