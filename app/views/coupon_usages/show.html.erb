<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Coupon_usage</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to coupon_usages_path, class: button_class(theme: "transparent") do %>
      All Coupon_usages
      <% end %>
      <%= link_to edit_coupon_usage_path(@coupon_usage), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Date:</p>
        <p><%= @coupon_usage.date %></p>
      </li>
      <li>
        <p class="font-semibold">Customer:</p>
        <p><%= @coupon_usage.customer %></p>
      </li>
      <li>
        <p class="font-semibold">Order:</p>
        <p><%= @coupon_usage.order %></p>
      </li>
      <li>
        <p class="font-semibold">Coupon:</p>
        <p><%= @coupon_usage.coupon %></p>
      </li>
  </ul>
</div>
